<mujoco model="pushbox">
  <option timestep="0.001" iterations="1" ls_iterations="4" />

  <default>
    <default class="goal">
      <geom conaffinity="0" contype="0" rgba="0 1 0 0.2"/>
    </default>
    <default class="translation">
      <position kp="10" kv="2" ctrlrange="-1 1"/>
    </default>
    <geom friction="1"/>
  </default>

  <worldbody>
    <!-- Reference site for Cartesian control -->
    <site name="reference" pos="0.0 0.0 0.02" size="0.01" rgba="1 0 0 0.0"/>
    
    <body name="goal" mocap="true" pos="0.0 0.1 0.02">
      <geom class="goal" name="goal_cube" type="box" size="0.02 0.02 0.02"/>
    </body>

    <body name="block" pos="0.0 0.0 0.02">
      <joint name="T_x" type="slide" pos="0 0 0" axis="1 0 0" />
      <joint name="T_y" type="slide" pos="0 0 0" axis="0 1 0" />
      <joint name="T_z" type="slide" pos="0 0 0" axis="0 0 1" />
      <joint name="R_z" axis="0 0 1" />
      <geom name="block_cube" type="box" size="0.02 0.02 0.02" />
      <inertial pos="0 0 0" mass="1" diaginertia="0.001 0.001 0.001"/>
    </body>

    <body name="pusher" pos="0 0.0 0.02">
      <joint name="root_x" type="slide" pos="0 0 0" axis="1 0 0" />
      <joint name="root_y" type="slide" pos="0 0 0" axis="0 1 0" />
      <geom name="pusher" type="sphere" size="0.02" rgba="1 0 0 1" />
      <site name="pusher" pos="0 0 0" size="0.02" rgba="1 0 0 0" />
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.0001 0.0001 0.0001"/>
    </body>
  </worldbody>

  <actuator>
    <!-- Replace velocity actuators with position actuators -->
    <position name="x" site="pusher" refsite="reference" gear="1 0 0 0 0 0" class="translation"/>
    <position name="y" site="pusher" refsite="reference" gear="0 1 0 0 0 0" class="translation"/>
  </actuator>

  <sensor>
    <framepos name="position" objtype="body" objname="block" reftype="body" refname="goal"/>
    <framequat name="orientation" objtype="body" objname="block" reftype="body" refname="goal"/>
  </sensor>
</mujoco>
